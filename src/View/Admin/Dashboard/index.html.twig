			<div class="uk-card uk-card-default uk-card-body admin-card-body">
				<h3 class="uk-card-title admin-h3-card">Nombre d'utilisateurs</h3>
				<p>{{customers|length }}</p>
			</div>
		</div>
{% endblock %}