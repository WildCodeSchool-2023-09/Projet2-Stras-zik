<form class="uk-grid-small uk-grid admin-users" method="POST" enctype="multipart/form-data">
        <div class="uk-width-1-2@s" style="margin-bottom:2rem">
            <label class="uk-form-label"for="form-stacked-text">Prénom</label>
            <div class="uk-form-controls">
                <input class="uk-input" name="firstname"  id="form-stacked-text" type="text" 
                placeholder="Prénom" value="{{ users.firstname }}" aria-label="Input">
            </div>
        </div>

        <div class="uk-width-1-4@s">
			<label class="uk-form-label">Status</label>
            <div>
                <select name="status" class="uk-select admin-select-categorie">
                    <option {% if users.status == 0 %} selected {% endif %} value="0">Utilisateur</option>
                    <option {% if users.status == 1 %} selected {% endif %} value="1">Admin</option>
                </select>
            </div>
        </div>

        <div class="uk-width-1-2@s" style="margin-bottom:2rem">  
            <label class="uk-form-label"for="form-stacked-text">Nom</label>
            <div class="uk-form-controls">
                <input class="uk-input" name="lastname"  id="form-stacked-text" type="text" placeholder="Nom"
                value="{{ users.lastname }}" aria-label="Input">
            </div>        
        </div>

        <div class="uk-width-1-2@s" style="margin-bottom:2rem">
            <label class="uk-form-label"for="form-stacked-text">Email</label>
            <div class="uk-form-controls">
                <input class="uk-input" name="email"  id="form-stacked-text" type="text" placeholder="Email"
                value="{{ users.email }}" aria-label="Input">
            </div>
        </div>

        <div class="uk-width-1-2@s" style="margin-bottom:2rem">
            <label class="uk-form-label"for="form-stacked-text">Adresse</label>
            <div class="uk-form-controls">
                <input class="uk-input" name="adresse"  id="form-stacked-text" type="text" placeholder="Adresse"
                value="{{ users.adresse }}" aria-label="Input">
            </div>
        </div>

        <div class="uk-width-1-6@s" style="margin-bottom:2rem">
            <label class="uk-form-label"for="form-stacked-text">Code postal</label>
            <div class="uk-form-controls">
                <input class="uk-input" name="code_postal"  id="form-stacked-text" type="text" 
                placeholder="Code postal" value="{{ users.code_postal }}" aria-label="Input">
            </div>
        </div> 

        <div class="uk-width-1-4@s" style="margin-bottom:2rem">
            <label class="uk-form-label"for="form-stacked-text">Ville</label>
            <div class="uk-form-controls">
                <input class="uk-input" name="ville"  id="form-stacked-text" type="text" 
                placeholder="Ville" value="{{ users.ville }}" aria-label="Input">
            </div>
        </div>

        <div style="margin-top:2rem">
            <button class="uk-button uk-button-default contact-button" type="submit" name="update" style="margin-left:0.5rem">Enregistrer les modifications</button>
            <button class="uk-button uk-button-default contact-button" type="submit" name="delete" style="margin-left:0.5rem">Supprimer le compte</button>
        </div>
    </form>
