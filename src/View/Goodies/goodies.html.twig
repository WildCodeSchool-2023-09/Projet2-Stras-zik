{% extends 'layoutAside.html.twig' %}

{% block content %}
    <section class="goodies uk-width-1-2@s uk-text-center">
        <h1>Page Goodies</h1>
        <p>Voici les goodies disponibles pendant nos concerts !</p>

        <div class="" uk-grid>
            {% for goodie in goodies %}
                <a href="#modal-container{{goodie.id}}" class="uk-width-1-3@m "uk-toggle>
                    
                    <div class="card_goodies uk-card uk-card-default uk-transition-toggle uk-flex uk-flex-column uk-flex-middle"  tabindex="0">  
                        <div class="uk-card-media-top card_goodie_top">
                            <img src="assets/images/goodies/{{ goodie.picture }}" width="100%" height="100%" alt="">
                        </div>
                        <div class="uk-card-body"> 
                            <h3 class="uk-card-title uk-text-center uk-height-match">{{ goodie.designation }}</h3>
                        </div>
                        {# <div class="uk-position-center uk-panel"><h1 class="uk-transition-slide-bottom-small">En voir plus</h1></div> #}
                    </div>
                    
                </a>
                {% include 'Include/Goodies/_modal_goodie.html.twig' %}
            {% endfor %}
        </div>
    <section>
{% endblock %}