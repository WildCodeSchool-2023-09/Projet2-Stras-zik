{% extends 'layoutAside.html.twig' %}

{% block content %}
    <section class="goodies uk_container uk-width-1-2@s uk-text-center">
        <h1>Page Goodies</h1>
        <p>Voici les goodies disponibles pendant nos concerts !</p>

        <div class="" uk-grid>
            {% for goodie in goodies %}
                <a href="#modal-container{{goodie.id}}" class="uk-width-1-3@m  uk-height-large" uk-toggle>
                    
                    <div class="card_goodies uk-card uk-card-default uk-card-media uk-transition-toggle" tabindex="0">  
                        <div class="uk-card-media-top">
                            <img src="assets/images/goodies/{{ goodie.picture }}" width="600" height="400"> </img>
                        </div>
                        <div class="uk-card-body"> 
                            <h3 class="uk-card-title">{{goodie.designation}}</h3>
                        </div>
                        <div class="uk-position-center uk-panel"><h1 class="uk-transition-slide-bottom-small">En voir plus</h1></div>
                    </div>
                    
                </a>
                {% include 'Include/Goodies/_modal_goodie.html.twig' %}
            {% endfor %}
        </div>
    <section>
{% endblock %}