<aside class="uk-width-1-4 uk-margin-medium-left uk-visible@s">
    <h3>Réseaux sociaux</h3>
    <ul  class="aside_list_reseau uk-flex ">
        <li>
            <a href="https://www.facebook.com/dGruppa.lesassoiffes/?locale=fr_FR">
                <img src="/assets/images/icons/Icone_Facebook.svg" alt="Logo Facebook" uk-svg>
            </a>
        </li>
        <li>
            <a href="https://www.instagram.com/les_assoiffes/">
                <img src="/assets/images/icons/Icone_Instagram.svg" alt="Logo Instagram" uk-svg>
            </a>
        </li>
        <li>
            <a href="https://www.youtube.com/@LesAssoiffes">
                <img src="/assets/images/icons/Icone_Youtube.svg" alt="Logo Youtube" uk-svg>
            </a>
        </li>
    </ul>


    <div>
        <form action="" method="POST">
        <div class="uk-flex uk-flex-column">
            <label for="newletter">Inscrivez vous à notre newsletter !</label>
            <input type="email" name="email" id="newletter" placeholder="Votre email" class="uk-width-1-2"></input>
            {% if validateInscription %}
                <ul class="aside_list">
                    <li>Inscription validé !</li>
                </ul>
            {% endif %}
            {% if errors is not empty %}
                <ul class="aside_errors">
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
                </ul>
            {% endif %}
        </div>
        <button class="uk-button uk-button-default uk-margin-small-top">Envoyer !</button>
        </form>
    </div>

    <div class="uk-margin-medium-top"> 
        <h3><a href="/goodies">Visitez notre boutique !</a></h3>
    </div>
</aside>
